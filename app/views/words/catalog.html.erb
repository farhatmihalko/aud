<% if @lang == 'kz' %>	
	<%= link_to 'Ru',language_change_link(@lang)%><br/>
	<% kz_letters().split("").each do |l| %>
		<%= link_to l,catalog_anchor("kz",l)%>
	<% end %>
<% else %>
	<%= link_to 'Kz',language_change_link(@lang)%><br/>
	<% ru_letters().split("").each do |l| %>
		<%= link_to l,catalog_anchor("ru",l)%>
	<% end %>
<% end %><br/>
<% @words.each do |w| %>
	<%= link_to w.name,controller: 'words',action: 'index',word: w.id %><br/>
<% end %>
<%= will_paginate(@words) %>
